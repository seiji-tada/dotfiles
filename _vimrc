set nocompatible
set directory=$HOME/vimtmp
set backupdir=$HOME/vimbackup
set clipboard=unnamed
set number
set hidden
set incsearch
set shiftwidth=4
set tabstop=4
set expandtab
set smarttab
set autoindent
set smartindent
set showmatch
set smartcase
set nowrapscan

" Color Scheme
syntax enable
set background=dark
let g:solarized_termcolors=256
colorscheme solarized
